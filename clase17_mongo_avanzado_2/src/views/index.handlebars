<div>
    <table border="1">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Gender</th>
            </tr>
        </thead>
        <tbody>
          {{#each docs}}
            <tr>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.gender}}</td>
            </tr>
          {{/each}}
        </tbody>
    </table>

    <div>
        Total Docs: {{ totalDocs }}
        <br>
        {{#if hasPrevPage}}
            <a href="{{prevLink}}">Previus</a>
        {{/if}}
        -
        {{#if hasNextPage}}
            <a href="{{nextLink}}">Next</a>
        {{/if}}
    </div>
</div>